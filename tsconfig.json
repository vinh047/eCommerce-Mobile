{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    // --- Đề xuất cho Next.js + TypeScript ---
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "bundler",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "isolatedModules": true,
    "types": [
      "node"
    ], //  THÊM DÒNG NÀY
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "app",
    "next-env.d.ts",
    "src",
    ".next/types/**/*.ts",
    "export-data.mjs"
  ],
  "exclude": [
    "node_modules"
  ]
}