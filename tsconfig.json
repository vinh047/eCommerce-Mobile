{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    // --- đề xuất cho Next.js + TS ---
    "strict": true,
    "allowJs": true, // đổi thành false nếu dự án thuần TS
    "checkJs": false, // bật true nếu muốn TS check cả file JS
    "moduleResolution": "bundler", // phù hợp Next 13/14/15
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "app",
    "next-env.d.ts",
    "src",
    ".next/types/**/*.ts"
, "export-data.mjs"  ],
  "exclude": ["node_modules"]
}
